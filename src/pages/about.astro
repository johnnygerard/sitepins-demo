---
import Faq from "~/components/Faq.astro";
import { hero, work } from "~/data/about.json";
import Layout from "~/layouts/Layout.astro";
---

<Layout title="About">
  <section class="bg-onyx text-white">
    <div class="mx-auto w-full max-w-6xl px-6 py-16">
      <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
        <div class="space-y-6">
          <p
            class="text-sm font-semibold tracking-[0.2em] text-bright-gold uppercase"
          >
            {hero.eyebrow}
          </p>
          <h1 class="font-display text-4xl font-semibold sm:text-5xl">
            {hero.title}
          </h1>
          <p class="max-w-xl text-lg text-platinum/80">
            {hero.lead}
          </p>
        </div>

        <div class="grid gap-4 sm:grid-cols-2">
          {
            hero.stats.map((item) => (
              <div class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-sm">
                <p class="text-xs font-semibold tracking-[0.2em] text-bright-gold uppercase">
                  {item.label}
                </p>
                <p class="mt-3 text-2xl font-semibold text-white">
                  {item.value}
                </p>
                <p class="mt-2 text-sm text-platinum/70">{item.detail}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="mx-auto w-full max-w-6xl px-6 py-14">
    <div class="grid gap-10 lg:grid-cols-[0.9fr_1.1fr] lg:items-center">
      <div class="space-y-4">
        <p
          class="text-sm font-semibold tracking-[0.2em] text-jet-black/60 uppercase"
        >
          {work.eyebrow}
        </p>
        <h2 class="font-display text-3xl font-semibold text-onyx">
          {work.title}
        </h2>
        <p class="text-base text-jet-black/70">
          {work.body}
        </p>
      </div>
      <div class="grid gap-4 sm:grid-cols-2">
        {
          work.items.map((item) => (
            <div class="rounded-3xl border border-jet-black/10 bg-white p-5 text-sm font-medium text-onyx shadow-sm">
              {item}
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Faq />
</Layout>
