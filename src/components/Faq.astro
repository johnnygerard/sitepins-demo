---
import CaretDown from "~/components/svg/icons/CaretDown.astro";
import faqItems from "~/data/faq.json";
---

<section class="bg-onyx text-white">
  <div class="mx-auto w-full max-w-6xl px-6 py-16">
    <div class="mb-10 space-y-4 text-center">
      <p
        class="text-sm font-semibold tracking-[0.2em] text-bright-gold uppercase"
      >
        FAQ
      </p>
      <h2 class="font-display text-3xl font-semibold sm:text-4xl">
        Frequently asked questions
      </h2>
    </div>

    <div class="mx-auto max-w-3xl divide-y divide-white/10">
      {
        faqItems.map(({ question, answer }, index) => (
          <details class="group py-5" name="faq" open={index === 0}>
            <summary class="flex cursor-pointer list-none items-center justify-between gap-4 text-lg font-medium transition-colors duration-200 hover:text-bright-gold">
              <span>{question}</span>
              <CaretDown class="size-5 shrink-0 text-bright-gold transition-transform duration-300 group-open:rotate-180" />
            </summary>
            <p class="mt-4 text-platinum/80">{answer}</p>
          </details>
        ))
      }
    </div>
  </div>
</section>
